<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/home_radiogroup"
        android:padding="5dp">
        <RadioButton
            android:id="@+id/rb_near"
            style="@style/radioButton"
            android:text="附近"
            />
        <RadioButton
            android:id="@+id/rb_rec"
            style="@style/radioButton"
            android:text="推荐"
            />
        <RadioButton
            android:id="@+id/rb_comehere"
            style="@style/radioButton"
            android:text="来这儿"
            />

    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/viewline_near"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:background="#008B45"
            android:visibility="invisible"
            />
        <View
            android:id="@+id/viewline_rec"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:background="#008B45"
            android:visibility="invisible"
            />
        <View
            android:id="@+id/viewling_comhere"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:background="#008B45"
            android:visibility="invisible"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/home_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />





    </LinearLayout>






</LinearLayout>
